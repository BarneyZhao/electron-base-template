{
    "name": "electron-base",
    "version": "1.0.0",
    "productName": "electron-base",
    "description": "electron-base",
    "main": "dist/main.js",
    "scripts": {
        "dev": "tsc -w",
        "el": "npx nodemon -w dist -x cross-env NODE_ENV=dev electron .",
        "build-el": "tsc && cross-env NODE_ENV=prod electron-builder",
        "build-win": "tsc && cross-env NODE_ENV=prod electron-builder --win --x64",
        "testdb": "ts-node testdb.ts"
    },
    "keywords": [],
    "author": "zhaoxuanzi",
    "license": "MIT",
    "dependencies": {
        "fast-glob": "^3.2.9",
        "lodash": "^4.17.21",
        "node-worker-threads-pool": "^1.5.1",
        "sqlite3": "^5.0.2",
        "tslib": "^2.3.1"
    },
    "devDependencies": {
        "@electron/remote": "^2.0.1",
        "@types/lodash": "^4.14.175",
        "@types/node": "^16.10.9",
        "@types/sqlite3": "^3.1.8",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "cross-env": "^7.0.3",
        "electron": "^15.1.2",
        "electron-builder": "^22.13.1",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "nodemon": "^2.0.13",
        "prettier": "^2.4.1",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.4"
    },
    "build": {
        "appId": "com.electron.electron-base",
        "directories": {
            "output": "e_dist"
        },
        "files": [
            "dist/**/*"
        ],
        "mac": {
            "target": "dmg",
            "icon": "public/icon-512.icns"
        },
        "win": {
            "target": "zip",
            "icon": "public/icon-256.ico"
        }
    }
}
